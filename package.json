{
  "name": "foss-vital",
  "version": "1.0.0",
  "description": "Your FOSS project's health report - A clean, simple API for fetching GitHub repository data",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch dist --exec node dist/api/index.js\"",
    "build": "tsc",
    "start": "node dist/api/index.js",
    "deploy": "vercel --prod",
    "preview": "vercel dev"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "http": "^0.0.1-security",
    "isomorphic-git": "^1.32.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.4",
    "@vercel/node": "^3.2.29",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3",
    "vercel": "^37.0.0"
  },
  "engines": {
    "node": "20.x"
  }
}
